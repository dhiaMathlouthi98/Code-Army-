{% extends 'base.html.twig' %}
{% block title%}Liste des notes{% endblock %}
{% block body %} {% if classes %}
<h3>Choisir la classe</h3>
<div class="container" style="padding-right: 900px ; padding-bottom: 50px; ">
    <select  class="form-control" id="supervisor">
        {% for classe in classes %}
            <option value="fdg">{{  classe.id }}</option>
        {% endfor %}
    </select>

    <table id="notes" class="table table-striped">
        <thead> <tr> <th>Liste</th> <th>Etudiant</th><th>Note</th><th>Actions</th>
            {% set count = 0 %}
        </tr> </thead> <tbody> {% for note in notes %}
            {% set count = count + 1 %}
            <tr> <td>Note {{ count }}</td>
                <td>{{  note.etudiant.nom }} {{  note.etudiant.prenom }}</td>
                <td>{{ note.note }}</td>

                <td> <a href="/notes/{{ note.id}}" class="btn btn-dark">Détails</a>
                    <a href="/notes/edit/{{ note.id }}" class="btn btn-dark">Modifier</a>
                    <a href="/notes/delete/{{ note.id }}" class="btn btn-danger" onclick="return confirm('Etes-vous sûr de supprimer cette note?');">Supprimer</a>
                </td>
                </td> </tr> {% endfor %}
        </tbody>
    </table>
</div>
{% endif %}
{% endblock %}
